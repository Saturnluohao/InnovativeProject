<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_flight">

    <fragment
        android:id="@+id/navigation_flight"
        android:name="com.tongji.helloworld.ui.flight.FlightFragment"
        android:label="@string/title_flight"
        tools:layout="@layout/fragment_flight" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.tongji.helloworld.ui.dashboard.DashboardFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_ar"
        android:name="com.tongji.helloworld.ui.notifications.NotificationsFragment"
        android:label="@string/title_ar"
        tools:layout="@layout/fragment_ar" />
</navigation>