<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/HMSettingLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="#FFFFFF"
    android:columnCount="2"
    android:orientation="horizontal"
    android:padding="10dp"
    android:rowCount="3"
    android:scaleX="1">


    <TextView
        android:id="@+id/pick_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:text="请选择城市"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/city_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="20dp"
        android:dropDownWidth="100dp"
        android:entries="@array/cities"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/pick_timespan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:text="请选择时间段"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/timespan_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="20dp"
        android:dropDownWidth="100dp"
        android:entries="@array/timespan" />

    <Button
        android:id="@+id/HMSetting_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="取消" />

    <Button
        android:id="@+id/HMSetting_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="确定" />

</GridLayout>